<!DOCTYPE html>
<html>
  <head>
    <%- include(`../partials/head`) %>
    <%- include(`../partials/scripts`) %>
  </head>
  <body>
    <%- include(`../partials/header`) %>

  <div class="profile-container">
      <h1> Here is the information and the exercises for <%= method.name %> </h1>

      <p><b>Language:</b>
          <%= method.language %>
      </p>

      <p><b>Version:</b>
        <%= method.version_added %>
      </p>

      <br>
      <hr>
      <br>

      <p><b>Description:</b>
          <%= method.description %>
      </p>

      <p><b>More Documentation:</b>
        <a href= <%= method.docs_url %>> <%= method.docs_url %></a>
      </p>

      <br>
      <br>

      <!-- Buttons to edit and delete -->
        <% if (user.local && user.local.isAdmin) { %>

      <a href="/methods/<%= method.slug_url %>/edit" class="exercise-btn">Edit method</a>

        <% } %>


      <div>
        <article>
          <ul>
            <% exercises.forEach(function(exercise) { %>
                <% if (exercise.method == method.id) { %>
              <a href="/exercises/<%= exercise.id %>" value=<%= exercise.id %>>
              <h2>  <%= exercise.name %> </h2>
              </a>
              <% } else { %>
                <% } %>
            <% }) %>
          </ul>
        </article>
      </div>


      </div>
  </body>
</html>
