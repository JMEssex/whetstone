<!DOCTYPE html>
<html>
  <head>
    <%- include(`../partials/head`) %>
    <%- include(`../partials/scripts`) %>
  </head>
  <body>
    <%- include(`../partials/header`) %>

  <div class="profile-container">
      <h1> Here is the information and the exercises for <%= method.name %> </h1>

      <p>Language:
          <%= method.language %>
      </p>

      <p>Version:
          <%= method.version_added %>
      </p>

      <p>Description:
          <%= method.description %>
      </p>

      <p>More Documentation:
          <%= method.docs_url %>
      </p>

      <br>

      <!-- Buttons to edit and delete -->
        <% if (user.local && user.local.isAdmin) { %>
      <a href="/methods/<%= method.slug_url %>/edit" class="exercise-btn">edit method</a>
        <% } %>


      <div>
        <article>
          <ul>
            <% exercises.forEach(function(exercise) { %>
                <% if (exercise.method == method.id) { %>
              <a href="/exercises/<%= exercise.id %>" value=<%= exercise.id %>>
              <h2>  <%= exercise.name %> </h2>
              </a>
              <% } else { %>
                <% } %>
            <% }) %>
          </ul>
        </article>
      </div>
  </div>

  <br><hr><br>
  <div>
  <div id="#mdn-iframe-container">
    <!-- <link rel="stylesheet" href="/css/MDN_Pages.css"> -->
    <style scoped>
      @import "/css/MDN_Wiki.css";
    </style>
    <div id="mdn-wiki-content" data="<%= method.docs_url %>"></div>
  </div>
  </body>
</html>
